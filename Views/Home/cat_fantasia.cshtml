@model IEnumerable<Biblioteca_UniLib.Models.Course>
@{
    ViewData["Title"] = "cat_fantasia";
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<style>
        body {
            
            background: url("/imagens/hogwarts-in-moonlight.jpg") no-repeat center center fixed;
            background-size: cover;
            
        }
    </style>
<body>
    <div class="container_ld">
        <h1 style="font-size: 3rem; font-weight: bold; color: #fff; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);">Fantasia</h1>
        <p style="font-size: 1.5rem; font-weight: bold; color: #fff; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7);">Descobre os melhores livros sobre Fantasia</p>

        @if (Model != null && Model.Any())
        {
            <div class="card_grid">
                @foreach (var course in Model.Where(c => c.CategoryID == 1))
                {
                    <a asp-controller="Courses" asp-action="Details" asp-route-id="@course.ID" class="card_ld-link">
                        <div class="card_ld" style="background-color: rgba(255, 255, 255, 0.8); width: 200px; margin: 10px;">
                            <div class="card_l_content" style="display: flex; flex-direction: column; align-items: center; padding: 10px;">
                                @if (!string.IsNullOrEmpty(course.CoverPhoto))
                                {
                                    <img src="~/Cover/@course.CoverPhoto" alt="Capa do Livro" style="width: 80%; height: auto; object-fit: cover;" />
                                }
                                else
                                {
                                    <img src="/imagens/default-cover.png" alt="Capa Padrão" style="width: 80%; height: auto; object-fit: cover;" />
                                }
                                <h3 class="book-title" style="text-align: center; margin-top: 10px;">@course.Name</h3>
                                <p class="book-author" style="text-align: center;">@course.Author</p>
                            </div>
                        </div>
                    </a>
                }
            </div>
        }

        }


        }


        }
       
    </div>

   
</body>
</html>
<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f8f9fa;
    }

    .card_ld, .card_ad {
        min-width: 300px;
        background-color: #f8f9fa;
        text-align: center;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        padding: 15px;
    }

        .card_ld img, .card_ad img {
            width: 100%;
            height: auto;
            border-radius: 10px;
            margin-bottom: 10px;
        }

    h1 {
        font-size: 2.5rem;
        margin-bottom: 10px;
        color: #333;
    }

    p {
        font-size: 1rem;
        color: #666;
    }

    .card_grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-top: 20px;
    }

    .card_ld {
        background: #fff;
        border: 1px solid #ddd;
        border-radius: 10px;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        text-align: center;
    }

        .card_ld:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }

        .card_ld img {
            width: 100px;
            height: 200px;
            object-fit: cover;
        }

    .card_l_content {
        padding: 15px;
    }

    .book-title {
        font-size: 1.2rem;
        font-weight: bold;
        color: #333;
        margin: 10px 0 5px;
    }

    .book-author {
        font-size: 1rem;
        color: #777;
    }

    .pagination {
        display: flex;
        justify-content: center;
        margin-top: 30px;
    }

        .pagination a {
            text-decoration: none;
            color: #333;
            margin: 0 5px;
            padding: 10px 15px;
            border: 1px solid #ddd;
            border-radius: 5px;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            .pagination a.active {
                background-color: #5e0606;
                color: #fff;
                border-color: #5e0606;
            }

            .pagination a:hover {
                background-color: #5e0606;
                color: #fff;
            }

</style>

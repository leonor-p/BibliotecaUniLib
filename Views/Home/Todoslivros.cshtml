@model IEnumerable<Biblioteca_UniLib.Models.Course>
@{
    ViewData["Title"] = "Todoslivros";
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="/css/style.css"> <!-- Adicione um CSS externo se necessário -->
</head>
<body>
    <div class="container_ld">
        <h1>Os Nossos Livros</h1>
        <p>Descobre os Melhores Livros</p>
        @if (Model != null && Model.Any())
        {
            <div class="card_grid">
                @foreach (var course in Model)
                {
                    <a asp-controller="Courses" asp-action="Details" asp-route-id="@course.ID" class="card_ld-link">
                        <div class="card_ld">
                            <div class="card_l_content">
                                @if (!string.IsNullOrEmpty(course.CoverPhoto))
                                {
                                    <img src="~/Cover/@course.CoverPhoto" alt="Capa do Livro" />
                                }
                                else
                                {
                                    <img src="/imagens/default-cover.png" alt="Capa Padrão" />
                                }
                                <h3 class="book-title">@course.Name</h3>
                                <p class="book-author">@course.Author</p>
                            </div>
                        </div>
                    </a>
                }
            </div>
        }
        else
        {
            <p>Nenhum livro disponível no momento.</p>
        }
    </div>

    <div class="pagination">
        <a href="#">1</a>
        <a href="#">2</a>
        <a href="#">3</a>
        <a href="#" class="active">4</a>
        <a href="#">5</a>
    </div>
</body>
</html>
<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f8f9fa;
    }

    .container_ld {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    h1 {
        font-size: 2.5rem;
        margin-bottom: 10px;
        color: #333;
        text-align: center;
    }

    p {
        font-size: 1rem;
        color: #666;
        text-align: center;
    }

    .card_grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-top: 20px;
    }

    .card_ld, .card_ad {
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 10px;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        text-align: center;
    }

        .card_ld:hover, .card_ad:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }

        .card_ld img, .card_ad img {
            width: 100%;
            height: auto;
            border-bottom: 1px solid #ddd;
            object-fit: cover;
        }

    .card_l_content {
        padding: 15px;
    }

    .book-title {
        font-size: 1.2rem;
        font-weight: bold;
        color: #333;
        margin: 10px 0 5px;
    }

    .book-author {
        font-size: 1rem;
        color: #777;
    }

    .pagination {
        display: flex;
        justify-content: center;
        margin-top: 30px;
    }

        .pagination a {
            text-decoration: none;
            color: #333;
            margin: 0 5px;
            padding: 10px 15px;
            border: 1px solid #ddd;
            border-radius: 5px;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            .pagination a.active {
                background-color: #5e0606;
                color: #fff;
                border-color: #5e0606;
            }

            .pagination a:hover {
                background-color: #5e0606;
                color: #fff;
            }
</style>
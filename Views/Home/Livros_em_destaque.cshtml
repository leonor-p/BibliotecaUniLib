@model IEnumerable<Biblioteca_UniLib.Models.Livro>

@{
    ViewData["Title"] = "Livros em destaque";
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        /* Adicione estilos adicionais aqui se necessário */
    </style>
</head>
<body>
    <div class="container_ld">
        <h1>Livros em destaque</h1>
        <p>Descubra as últimas tendências e os livros mais populares.</p>

        <div class="book-grid">
            @foreach (var livro in Model)
            {
                <div class="book-card">
                    <a href="@Url.Action("DetalhesDoLivro", "Home", new { id = livro.LivroID })">
                        <img src="@livro.ImagemUrl ?? " /imagens/default-book-cover.png"" alt="Capa do livro @livro.Titulo" onerror="this.src='/imagens/default-book-cover.png';">
                        <h3>@livro.Titulo</h3>
                        <p>@livro.Autor</p>
                        <div class="stars">★★★★★</div>
                    </a>
                </div>
            }
        </div>

        <div class="pagination">
            <a href="#">1</a>
            <a href="#">2</a>
            <a href="#">3</a>
            <a href="#" class="active">4</a>
            <a href="#">5</a>
        </div>
    </div>
    <footer>
        <div class="grid footer">
            <div class="card_logo">
                <img src="/imagens/logo200.png" alt="logo UniLib">
            </div>
            <div class="grid sb">
                <h3>Sobre nós</h3>
                <a href="#privacidade">Política de Privacidade</a>
                <a href="#termos">Termos de Serviço</a>
            </div>
            <div class="grid ajuda">
                <h3>Ajuda</h3>
                <a href="#ajuda">Ajuda</a>
            </div>
        </div>
    </footer>
</body>
</html>
@section Scripts{
    <script>
        $(´#box´).click(function () {
            if (confirm("Queres mudar a cor para vermelho?")) {
                $(this).css("color", "red");
            }
            $(this).text("Já cliquei!");
            $(this).css("background-color", "lightcyan");
        })

        $(" square").mouseover(function () { //switches the applied CSS class
            if ($(this).hasClass("alerta-perigo")) {
                $(this).addClass("alerta-successo"); $(this).removeClass("alerta-perigo");
            }
            else {
                $(this).addClass("alerta-perigo");
                $(this).removeClass("alerta-successo");
            }
        })

        setInterval(function () {
            $("#time").text(new Date().toLocaleString());
        }, 1000)

        setTimeout(function () {
                    $"(#fading").fadeOut(1000, function () {
            $(this).css({ "color": "red", "fomt-weight": "bold" })
        });
        $("#fading").fadeIn(1000)
        }, 10000)

        $("#accept").change(function () {
            if (this.checked) {
                $("#send").show();
            }
            else {
                $("#send").hide()
            }
        })

        $("#Categorias").change(function () {
            var index = $(this).val();

            $.getJSON("Home/testAjax", { id: index }, function (data) {
                var $selector = $("#livros");
                $selector.html(""); //clear all existing options in second dropdown

                if (data.length > 0) { //if returned any data, insert first option
                    $selector.append($("<option/>", { nodeValue: "", text: "--Escolhe um livro" }));
                }

<form asp-action="TestAjaxForm"
    data-ajax="true" data-ajax-method="post"
    data-ajax-moode="replace" data-ajax-update="#box">

    <label>Text to Send to server:</label>
    <input type="text" name="Text" />
    <input type="submit" value="Send" />

</form>

<div id="box">Original text</div>
<br />

<hr />
<a asp-action="TestAjaxLink"
    data-ajax="true" data-ajax-method="get"
    data-ajax-loading="#wait">Click me</a>

<div id="target"></div>
<div id="wait" style="display:none">
    <img src="~/imagens/loading.gif" />
</div>

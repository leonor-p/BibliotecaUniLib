@model IEnumerable<Biblioteca_UniLib.Models.Course>
@{
    ViewData["Title"] = "Home Page";
}
@{
    bool isBibliotecario = User.IsInRole("Bibliotecario");
    bool isAdmin = User.IsInRole("Admin");
}

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Biblioteca Virtual UNILIB</title>
    <link rel="stylesheet" href="~/css/styles.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <!-- Barra de Navegação -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="#">
                <img src="/imagens/bibliotecafi.png" alt="Biblioteca Virtual UNILIB" style="height: 40px;">
                Biblioteca Virtual UNILIB
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Início</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Sobre_Nos">Sobre Nós</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Ajuda">Ajuda</a>
                    </li>
                    @if (isBibliotecario)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Requests/Gerirrequisicoes">Gerir Requisições</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Courses/Index">Gerir Livros</a>
                        </li>
                    }
                    @if (isAdmin)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Admin/">Painel de Administração</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Barra de Pesquisa -->
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="Search..." name="query" />
                    <div class="input-group-append">
                        <button class="btn btn-primary" type="submit">Search</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Categorias em Destaque -->
    <section id="categorias" class="categorias bg-light py-5">
        <div class="container">
            <h2 class="text-center mb-4">
                <img src="/imagens/catlab.png" alt="Símbolo de Categorias" class="icon-categoria">
                Categorias
            </h2>
            <div class="row">
                <div class="col-md-4 mb-4">
                    <form asp-controller="Home" asp-action="cat_arte">
                        <button class="btn btn-light w-100 p-0">
                            <img src="/imagens/Cat_Arte.jpg" alt="Arte" class="img-fluid">
                            <h3 class="text-center py-2">Arte</h3>
                        </button>
                    </form>
                </div>
                <div class="col-md-4 mb-4">
                    <form asp-controller="Home" asp-action="cat_ficcao">
                        <button class="btn btn-light w-100 p-0">
                            <img src="/imagens/ficcao1.jpeg" alt="Ficção" class="img-fluid">
                            <h3 class="text-center py-2">Ficção</h3>
                        </button>
                    </form>
                </div>
                <div class="col-md-4 mb-4">
                    <form asp-controller="Home" asp-action="cat_romance">
                        <button class="btn btn-light w-100 p-0">
                            <img src="/imagens/Cat_Romance.jpg" alt="Romance" class="img-fluid">
                            <h3 class="text-center py-2">Romance</h3>
                        </button>
                    </form>
                </div>
                <div class="col-md-4 mb-4">
                    <form asp-controller="Home" asp-action="cat_financas">
                        <button class="btn btn-light w-100 p-0">
                            <img src="/imagens/cat_financas.jpg" alt="Finanças" class="img-fluid">
                            <h3 class="text-center py-2">Finanças</h3>
                        </button>
                    </form>
                </div>
                <div class="col-md-4 mb-4">
                    <form asp-controller="Home" asp-action="cat_fantasia">
                        <button class="btn btn-light w-100 p-0">
                            <img src="/imagens/Cat_Fantasia.jpg" alt="Fantasia" class="img-fluid">
                            <h3 class="text-center py-2">Fantasia</h3>
                        </button>
                    </form>
                </div>
                <div class="col-md-4 mb-4">
                    <form asp-controller="Home" asp-action="cat_comedia">
                        <button class="btn btn-light w-100 p-0">
                            <img src="/imagens/Cat_Comedia.jpg" alt="Comédia" class="img-fluid">
                            <h3 class="text-center py-2">Comédia</h3>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <!-- Autores em Destaque -->
    <section id="autores" class="autores bg-white py-5">
        <div class="container">
            <h2 class="text-center mb-4">
                <img src="/imagens/pessoalab.png" alt="Símbolo de Autores em Destaque" class="icon-categoria">
                Autores em Destaque
            </h2>
            <div class="row">
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="/imagens/Freida.jpg" alt="Fraida Mcfadden" class="card-img-top">
                        <div class="card-body">
                            <h3 class="card-title text-center">Freida Mcfadden</h3>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="/imagens/George.jpg" alt="George R. R. Martin" class="card-img-top">
                        <div class="card-body">
                            <h3 class="card-title text-center">George R. R. Martin</h3>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="/imagens/Alice.jpg" alt="Alice Oseman" class="card-img-top">
                        <div class="card-body">
                            <h3 class="card-title text-center">Alice Oseman</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Livros em Destaque -->
    <section id="destaques" class="recentes bg-light py-5">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>
                    <img src="/imagens/livrolab.png" alt="Símbolo de Livros em Destaque" class="icon-categoria">
                    Livros em Destaque
                </h2>
                <form asp-controller="Home" asp-action="Livros_em_destaque">
                    <button type="submit" class="btn btn-primary">Ver mais</button>
                </form>
            </div>
            <div class="carousel2" id="carousel-destaques">
                <button class="carousel2-btn prev">&#8249;</button>
                <div class="carousel2-track" data-current-slide="0">
                    @foreach (var course in Model.Where(c => c.Dest == true))
                    {
                        <a asp-controller="Courses" asp-action="Details" asp-route-id="@course.ID" class="card_ld-link">
                            <div class="card_ld">
                                <div class="card_l_content">
                                    @if (!string.IsNullOrEmpty(course.CoverPhoto))
                                    {
                                        <img src="~/Cover/@course.CoverPhoto" alt="Capa do Livro" class="img-fluid" />
                                    }
                                    else
                                    {
                                        <span>Sem imagem disponível</span>
                                    }
                                    <h3 class="book-title">@course.Name</h3>
                                    <p class="book-author">@course.Author</p>
                                </div>
                            </div>
                        </a>
                    }
                </div>
                <button class="carousel2-btn next">&#8250;</button>
            </div>
        </div>
    </section>

    <!-- Adicionados Recentemente -->
    <section id="adicionados" class="recentes bg-white py-5">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>
                    <img src="/imagens/relogiolab.png" alt="Símbolo de Livros Adicionados Recentemente" class="icon-categoria">
                    Adicionados Recentemente
                </h2>
                <form asp-controller="Home" asp-action="Adicionados_recentemente">
                    <button type="submit" class="btn btn-primary">Ver mais</button>
                </form>
            </div>
            <div class="carousel2" id="carousel-adicionados">
                <button class="carousel2-btn prev">&#8249;</button>
                <div class="carousel2-track" data-current-slide="0">
                    @foreach (var course in Model.Where(c => c.Addrec == true))
                    {
                        <a asp-controller="Courses" asp-action="Details" asp-route-id="@course.ID" class="card_ld-link">
                            <div class="card_ld">
                                <div class="card_l_content">
                                    @if (!string.IsNullOrEmpty(course.CoverPhoto))
                                    {
                                        <img src="~/Cover/@course.CoverPhoto" alt="Capa do Livro" class="img-fluid" />
                                    }
                                    else
                                    {
                                        <span>Sem imagem disponível</span>
                                    }
                                    <h3 class="book-title">@course.Name</h3>
                                    <p class="book-author">@course.Author</p>
                                </div>
                            </div>
                        </a>
                    }
                </div>
                <button class="carousel2-btn next">&#8250;</button>
            </div>
        </div>
    </section>

    <footer class="footer bg-dark text-white py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <img src="/imagens/logo200.png" alt="UniLib" class="img-fluid mb-3">
                    <p>Localização: Rua da Universidade 33, Vila Real, VR</p>
                    <p>Contacto: 972742234</p>
                    <p>Email: Unilib@gmail.com</p>
                </div>
                <div class="col-md-4">
                    <h3>Sobre nós</h3>
                    <p><a href="@Url.Action("Privacy", "Home")" class="text-white">Política de Privacidade</a></p>
                    <p><a href="@Url.Action("Termos", "Home")" class="text-white">Termos de Serviço</a></p>
                </div>
                <div class="col-md-4">
                    <h3>Ajuda</h3>
                    <p><a href="@Url.Action("Ajuda", "Home")" class="text-white">Caixa de Mensagens</a></p>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
@model IEnumerable<Biblioteca_UniLib.Models.BookRequests>



@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<h2 class="text-left mb-4" style=" color: black;">Histórico de Requisições de Livros</h2>
<!-- Pendentes -->
<div class="table-container">
    <h3 class="table-title" style="background-color: #5e0606; color: white;">Pendentes</h3>
    <table class="table table-striped table-white">
        <thead>
            <tr>
                <th>ID da Solicitação</th>
                <th>Título do Livro</th>
                <th>Data de Levantamento Proposta</th>
                <th>Data de Entrega Proposta</th>
                <th class="text-end">Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var request in Model.Where(r => r.UserName == User.Identity.Name && !r.IsAccepted && r.RequestStartDate <= DateTime.Now && r.RequestEndDate >= DateTime.Now))
            {
                <tr>
                    <td>@request.Id</td>
                    <td>@request.BookTitle</td>
                    <td>@request.RequestStartDate.ToString("dd/MM/yyyy")</td>
                    <td>@request.RequestEndDate.ToString("dd/MM/yyyy")</td>
                    <td class="text-end">
                        <span>Pendente</span>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Aceites -->
<div class="table-container">
    <h3 class="table-title" style="background-color: #5e0606; color: white;">Aceites</h3>
    <table class="table table-striped table-white">
        <thead>
            <tr>
                <th>ID da Solicitação</th>
                <th>Título do Livro</th>
                <th>Data de Aceitação</th>
                <th>Data de Entrega Proposta</th>
                <th class="text-end">Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var request in Model.Where(r => r.UserName == User.Identity.Name && r.IsAccepted && !r.IsReturned))
            {
                <tr>
                    <td>@request.Id</td>
                    <td>@request.BookTitle</td>
                    <td>@(request.AcceptedDate?.ToString("dd/MM/yyyy HH:mm") ?? "-")</td>
                    <td>@request.RequestEndDate.ToString("dd/MM/yyyy")</td>
                    <td class="text-end">
                        <span>Em Andamento</span>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Concluídas -->
<div class="table-container">
    <h3 class="table-title" style="background-color: #5e0606; color: white;">Concluídas</h3>
    <table class="table table-striped table-white">
        <thead>
            <tr>
                <th>ID da Solicitação</th>
                <th>Título do Livro</th>
                <th>Data de Aceitação</th>
                <th>Data de Devolução</th>
                <th class="text-end">Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var request in Model.Where(r => r.UserName == User.Identity.Name && r.IsReturned))
            {
                <tr>
                    <td>@request.Id</td>
                    <td>@request.BookTitle</td>
                    <td>@(request.AcceptedDate?.ToString("dd/MM/yyyy HH:mm") ?? "-")</td>
                    <td>@(request.ReturnedDate?.ToString("dd/MM/yyyy HH:mm") ?? "-")</td>
                    <td class="text-end">
                        <span>Concluído</span>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    
    .table-container {
        margin: 20px 0;
    }

    .table-title {
        padding: 10px;
        font-size: 1.25rem;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        background-color: white; /* Fundo branco nas tabelas */
    }

        .table th, .table td {
            padding: 12px 15px;
            text-align: center;
        }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f9f9f9;
    }

    .table-bordered th, .table-bordered td {
        border: 1px solid #ddd;
    }

    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
    }

    .btn-sm {
        padding: 6px 12px;
    }

    .alert {
        margin-bottom: 20px;
    }

    .text-end {
        text-align: right;
    }

    h3 {
        font-weight: bold;
    }

    h2 {
        font-size: 2rem;
        color: #343a40
    }

    .btn-info {
        background-color: #5e0606;
        color: white;
        border: none;
    }

        .btn-info:hover {
            background-color: #5e0606;
        }

    .btn-warning {
        background-color: #5e0606;
        color: white;
        border: none;
    }

        .btn-warning:hover {
            background-color: #5e0606;
        }

    .btn-success {
        background-color: #5e0606;
        color: white;
        border: none;
    }

        .btn-success:hover {
            background-color: #5e0606;
        }
</style>



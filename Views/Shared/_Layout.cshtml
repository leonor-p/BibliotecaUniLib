<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UniLib</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/UniLib.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <!-- Barra de navegação -->
        <nav class="navbar navbar-expand-sm navbar-light custom-navbar border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">UniLib</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Início</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Sobre_Nos">Sobre Nós</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Ajuda">Ajuda</a>
                        </li>
                        <partial name="_LoginPartial" />
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="footer">
        <div class="card_logo">
            <img src="/imagens/logo200.png" alt="logo UniLib">
        </div>
        <div class="loc">
            <h3> </h3>
            <p class="card-text text-justify">
                Localização: Rua da Universidade 33, Vila Real, VR
            </p>
            <p class="card-text text-justify">
                Contacto: 972742234
            </p>
            <p class="card-text text-justify">
                Email: Unilib@gmail.com
        </div>
        <div class="sb">
            <h3>Sobre nós</h3>
            <p></p>
            <a href="@Url.Action("Privacy", "Home")">Política de Privacidade</a>
            <p></p>
            <a href="@Url.Action("Termos", "Home")">Termos de Serviço</a>
            <p></p>
        </div>
        <div class="ajuda">
            <h3>Ajuda</h3>
            <p></p>
            <a href="@Url.Action("Ajuda", "Home")">Caixa de Mensagens</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
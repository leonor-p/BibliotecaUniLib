@model Biblioteca_UniLib.Models.BookRequests

@{
    ViewData["Title"] = "Index";
    var course = (Biblioteca_UniLib.Models.Course)ViewData["course"];
}

<head>
    <link href="https://fonts.googleapis.com/css2?family=Archivo+Black&display=swap" rel="stylesheet">
</head>

<div class="container">
    <div class="card shadow-lg p-5 rounded">
        <h2 class="text-center mb-4" style="color: white; font-family: Arial, sans-serif;">Confirmar Requisição de Livro</h2>

        <div class="book-details mb-4 text-left">
            
            <h4 style="color:black">Estás a pedir a requisição do livro</h4>
           
            
            <div class="text-left mt-4">
                @if (!string.IsNullOrEmpty(course.CoverPhoto))
                {
                    <img src="@course.CoverPhoto" alt="Capa do Livro" class="img-fluid" style="max-width: 200px; border-radius: 8px;" />
                }
                else
                {
                    <span>Sem imagem disponível</span>
                }
            </div>
            <div class="row justify-content-left">
                
                <div class="col-md-6">
                    <p><strong>Título:</strong> @course.Name</p>
                    <p><strong>Autor:</strong> @course.Author</p>
                </div>
            </div>
        </div>

        <form asp-action="Create" method="post" id="requestForm">
            <input type="hidden" asp-for="BookId" value="@course.ID" />
            <input type="hidden" asp-for="BookTitle" value="@course.Name" />

            <div class="form-group">
                <label for="RequestStartDate" class="form-label">Data de Levantamento</label>
                <input type="date" class="form-control" asp-for="RequestStartDate" value="@DateTime.Now.ToString("yyyy-MM-dd")" id="RequestStartDate" />
            </div>

            <div class="form-group">
                <label for="RequestEndDate" class="form-label">Data de Entrega (máximo 15 dias)</label>
                <input type="date" class="form-control" asp-for="RequestEndDate" value="@DateTime.Now.AddDays(15).ToString("yyyy-MM-dd")" id="RequestEndDate" />
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-success btn-lg">Confirmar Requisição</button>
            </div>
        </form>
    </div>
</div>
<footer>
    <div class="grid footer">
        <div class="card_logo">
            <img src="/imagens/logo200.png" alt="logo UniLib">
        </div>
        <div class="grid sb">
            <h3>Sobre nós</h3>
            <p></p>
            <a href="@Url.Action("Privacy", "Home")">Política de Privacidade</a>
            <p></p>
            <a href="@Url.Action("Termos", "Home")">Termos de Serviço</a>
            <p></p>
        </div>
        <div class="grid ajuda">
            <h3>Ajuda</h3>
            <p></p>
            <a href="@Url.Action("Ajuda", "Home")">Caixa de Mensagens</a>
        </div>
    </div>
</footer>

<script>
    document.getElementById('requestForm').addEventListener('submit', function (event) {
        const startDate = new Date(document.getElementById('RequestStartDate').value);
        const endDate = new Date(document.getElementById('RequestEndDate').value);
        const maxDate = new Date(startDate);
        maxDate.setDate(startDate.getDate() + 15);

        if (endDate > maxDate) {
            alert('A data de entrega não pode ser superior a 15 dias após a data de levantamento.');
            event.preventDefault();
        }
    });
</script>

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: white;
        color: black;
    }

    .container {
        max-width: 1200px;
        margin: 50px auto;
    }

    .card {
        background-color: white;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        padding: 30px;
    }

    .form-group {
        margin-bottom: 25px;
    }

    .form-label {
        font-weight: bold;
        color: #5e0606;
    }

    .form-control {
        border-radius: 10px;
        padding: 15px;
        border: 1px solid #ccc;
        transition: border-color 0.3s ease;
    }

        .form-control:focus {
            border-color: white;
            box-shadow: 0 0 10px white(56, 124, 68, 0.5);
        }

    .btn-success {
        background-color: #5e0606;
        color: white;
        border: none;
        padding: 15px 50px;
        font-size: 20px;
        border-radius: 8px;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

        .btn-success:hover {
            background-color: #5e0606;
            transform: scale(1.05);
        }

    .book-details .row {
        display: flex;
        flex-wrap: wrap;
    }

    .book-details .col-md-6 {
        width: 50%;
        padding: 15px;
    }

    .text-center {
        text-align: center;
    }

    .img-fluid {
        max-width: 100%;
        height: auto;
    }
</style>
@model IEnumerable<Biblioteca_UniLib.Models.Pessoa>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table id="Tabela" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td id="Col_@item.Id">
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id"
                data-ajax="true" data-ajax-method="get"
                data-ajax-mode="replace" data-ajax-update="#Col_@item.Id" >Edit</a> 
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> 
                <a asp-action="Delete" asp-route-id="@item.Id"
                data-ajax="true" data-ajax-method="get"
                data-ajax-mode="replace" data-ajax-update="#Tabela"
                data-ajax-confirm="Tem a certeza?" >Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

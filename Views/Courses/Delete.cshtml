@model Biblioteca_UniLib.Models.Course

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>Tem a certeza que quer eliminar?</h3>
<div>
    <h4>Course</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Título
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ISBN)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ISBN)
        </dd>
        <dt class = "col-sm-2">
            Descrição
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Quantidade)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantidade)
        </dd>
      
       
        <dt class = "col-sm-2">
          Categoria
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.Description)
        </dd>
    </dl>
    
    @if (Model.Count == 0)
    {
        <form asp-action="Delete">
            <input type="hidden" asp-for="ID" />
            <input type="submit" value="Eliminar" class="btn btn-danger" style="color: #5e0606" /> |
            <a asp-action="Index" style="color: #5e0606">Back to List</a>
        </form>
    }
    else
    {
        <h3 style="font-size: 19px; color: #5e0606;">Não é possivel eliminar, uma vez que existem livros requisitados</h3>
    }

</div>

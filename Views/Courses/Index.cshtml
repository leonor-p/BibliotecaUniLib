@model IEnumerable<Biblioteca_UniLib.Models.Course>

@{
    ViewData["Title"] = "Index";
}

<h1>Gestão de Livros</h1>

<p>
    <a asp-action="Create" style="color: #5e0606;">Adicionar livro</a>
</p>
<form method="get" class="mb-4">
    <div class="row g-3">
        <div class="col-md-4">
            <input type="text" name="searchName" value="@ViewData["SearchName"]" class="form-control" placeholder="Pesquisar por Título" />
        </div>
        <div class="col-md-4">
            <input type="text" name="searchAuthor" value="@ViewData["SearchAuthor"]" class="form-control" placeholder="Pesquisar por Autor" />
        </div>
        
        <div class="col-md-4">
            <button type="submit" class="btn-submit">Pesquisar</button>

        </div>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                Título
            </th>
            <th>
                Autor
            </th>
            <th>
                ISBN
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Quantidade)
            </th>
          
            <th>
                @Html.DisplayNameFor(model => model.Dest)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Addrec)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ISBN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantidade)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Dest)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Addrec)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Description)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.ID" style="color: #5e0606;">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.ID" style="color: #5e0606;">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID" style="color: #5e0606;">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f8f9fa;
    }

    .card_ld, .card_ad {
        min-width: 300px;
        background-color: #f8f9fa;
        text-align: center;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        padding: 15px;
    }

        .card_ld img, .card_ad img {
            width: 100%;
            height: auto;
            border-radius: 10px;
            margin-bottom: 10px;
        }

    h1 {
        font-size: 2.5rem;
        margin-bottom: 10px;
        color: #333;
    }

    p {
        font-size: 1rem;
        color: #666;
    }

    .card_grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-top: 20px;
    }

    .card_ld {
        background: #fff;
        border: 1px solid #ddd;
        border-radius: 10px;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        text-align: center;
    }

        .card_ld:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }

        .card_ld img {
            width: 100px;
            height: 200px;
            object-fit: cover;
        }

    .card_l_content {
        padding: 15px;
    }

    .book-title {
        font-size: 1.2rem;
        font-weight: bold;
        color: #333;
        margin: 10px 0 5px;
    }

    .book-author {
        font-size: 1rem;
        color: #777;
    }

    .pagination {
        display: flex;
        justify-content: center;
        margin-top: 30px;
    }

        .pagination a {
            text-decoration: none;
            color: #333;
            margin: 0 5px;
            padding: 10px 15px;
            border: 1px solid #ddd;
            border-radius: 5px;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            .pagination a.active {
                background-color: #5e0606;
                color: #fff;
                border-color: #5e0606;
            }

            .pagination a:hover {
                background-color: #5e0606;
                color: #fff;
            }

    .btn-submit {
        width: 100%;
        padding: 10px;
        background-color: #722222;
        color: #fff;
        font-size: 16px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        margin-top: 0px;
    }

        .btn-submit:hover {
            background-color: #5c1a1a;
        }
</style>

@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Eliminar Dados Pessoais";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3>@ViewData["Title"]</h3>

<div class="alert alert-warning" role="alert">
    <p>
        <strong>Eliminar estes dados irá remover permanentemente a sua conta e não poderá ser recuperada.</strong>
    </p>
</div>

<div>
    <form id="delete-user" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        @if (Model.RequirePassword)
        {
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Introduza a sua palavra-passe." />
                <label asp-for="Input.Password" class="form-label">Palavra-passe</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="btn-submit" type="submit">Eliminar dados e encerrar a minha conta</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

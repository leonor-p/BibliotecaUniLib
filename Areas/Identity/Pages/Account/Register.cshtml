@page
@model Biblioteca_UniLib.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Registo";
}

<div class="register-container">
    <div class="register-left">
        <div class="back-button">
            <a asp-area="Home" asp-page="Index"><img src="~/imagens/seta.png" alt="Seta" /></a>
        </div>
        <h2>REGISTO</h2>
        <div class="image-container">
            <img src="~/imagens/Register.jpg" alt="Pilha de Livros com óculos em cima">
        </div>
    </div>
    <div class="register-right">
        <h3>Preenche todas as informações para criar uma conta na plataforma</h3>
        <form id="registerForm" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-group">
                <label asp-for="Input.UserName">Username</label>
                <input asp-for="Input.UserName" class="form-control" placeholder="Coloca o teu username" />
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Email">Email</label>
                <input asp-for="Input.Email" class="form-control" placeholder="Insere o teu email" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password">Password</label>
                <div class="password-wrapper">
                    <input asp-for="Input.Password" type="password" class="form-control" placeholder="Insere a password" />

                </div>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword">Confirma a password</label>
                <div class="password-wrapper">
                    <input asp-for="Input.ConfirmPassword" type="password" class="form-control" placeholder="Confirma a password" />

                </div>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Role">Tipo de Utilizador</label>
                <select asp-for="Input.Role" class="form-control" asp-items='new SelectList(ViewBag.roles,"Name","Name")'>
                    <option value="" class="form-control">Seleciona o Tipo de Utilizador</option>
                </select>
                <span asp-validation-for="Input.Role" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="btn-submit">REGISTA-TE</button>
        </form>
        <p>Já tem uma conta? <a asp-area="Identity" asp-page="/Account/Login">Iniciar sessão</a></p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}